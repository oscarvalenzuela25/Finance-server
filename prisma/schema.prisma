// generator & datasource
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ----------------- MODELOS ----------------- */

model user {
  id       String @id @default(uuid()) @db.Uuid
  name     String @db.Text
  email    String @db.Text
  password String @db.Text

  // relaciones
  transactions transaction[]
  budgets      budget[]
  pots         pot[]

  @@map("user")
}

model category {
  id  String @id @default(uuid()) @db.Uuid
  key String @db.Text

  // relaciones
  budgets      budget[]
  transactions transaction[]

  @@map("category")
}

model pot {
  id            String  @id @default(uuid()) @db.Uuid
  user_id       String  @db.Uuid
  name          String  @db.Text
  target_value  Decimal @db.Decimal
  current_value Decimal @db.Decimal
  theme         String  @db.Text

  // relaciones
  user user @relation(fields: [user_id], references: [id])

  @@map("pot")
}

model budget {
  id          String  @id @default(uuid()) @db.Uuid
  user_id     String  @db.Uuid
  category_id String  @db.Uuid
  maximum     Decimal @default(0) @db.Decimal
  theme       String  @db.Text

  // relaciones
  user         user      @relation(fields: [user_id], references: [id])
  category     category  @relation(fields: [category_id], references: [id])
  transactions transaction[]

  @@map("budget")
}

model transaction {
  id               String   @id @default(uuid()) @db.Uuid
  user_id          String   @db.Uuid
  category_id      String   @db.Uuid
  budget_id        String?  @db.Uuid
  name             String   @db.Text
  transaction_date DateTime @db.Timestamptz
  amount           Decimal  @db.Decimal

  // relaciones
  user     user     @relation(fields: [user_id], references: [id])
  category category @relation(fields: [category_id], references: [id])
  budget   budget?  @relation(fields: [budget_id], references: [id], onDelete: SetNull)

  @@map("transaction")
}
